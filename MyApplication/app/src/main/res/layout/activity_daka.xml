<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.Daka">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_history"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@drawable/bg_btn"
                android:text="打卡记录"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:layout_height="135dp">
            <LinearLayout
                android:layout_width="180dp"
                android:orientation="vertical"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="#E9EDF1"
                    android:text="上班 09:00">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/result1"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:text="未打卡">
                    </TextView>
                    <ImageView
                        android:id="@+id/icon1"
                        android:visibility="invisible"
                        android:layout_width="30dp"
                        android:src="@drawable/daka_pic02"
                        android:layout_height="30dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:background="#E9EDF1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="下班 18:00">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/result2"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:text="未打卡">
                    </TextView>
                    <ImageView
                        android:id="@+id/icon2"
                        android:visibility="invisible"
                        android:layout_width="30dp"
                        android:src="@drawable/daka_pic02"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#3949AB"
                    android:textAlignment="center"
                    android:text="未获得当前地址位置！点击下方获得定位"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="100dp"
        android:paddingTop="300dp"
        android:layout_height="wrap_content">
<ImageButton
    android:id="@+id/btn_loaction"
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:scaleType="centerCrop"
    android:src="@drawable/location_pic01"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="180dp"
        android:paddingLeft="50dp"
        >
        <ImageButton
            android:id="@+id/btn_daka1"
            android:src="@drawable/daka1"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_marginLeft="15dp"
            android:layout_height="150dp"
            />
        <ImageButton
            android:id="@+id/btn_daka2"
            android:src="@drawable/daka2"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_height="150dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:paddingBottom="80dp"
        android:paddingLeft="130dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_buka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="——申请补卡——"
            />
    </LinearLayout>
</FrameLayout>